<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Max duration of the selected audio file (milliseconds) -->
    <integer name="max_audio_duration">60000</integer>
    <!-- The component name for the target activity -->
    <string name="intent_target_package_name">com.optoma.whiteboard</string>
    <string name="intent_target_class_name">com.optoma.whiteboard.cb.MainActivity</string>
    <!-- Output file name -->
    <string name="screenshot_file_name">Screenshot_%1$s.png</string>
    <!-- Date format for output file name -->
    <string name="date_format">yyyy_MM_dd_HH_mm</string>
    <!-- Minutes -->
    <integer name="each_segment_duration">8</integer>
    <!-- Replace below with your own service region (e.g., "westus") -->
    <string name="speech_region">eastasia</string>
    <!-- Duration of the speech recognition stopping (milliseconds) -->
    <integer name="automatically_stop_speech_recognition">3000</integer>
    <!-- Output file name -->
    <string name="conversation_request_format">Q:\n%1$s\n</string>
    <string name="conversation_response_format">A:\n%1$s\n</string>
</resources>